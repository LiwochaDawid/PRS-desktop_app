<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prs.controllers.SignUpController">
   <children>
      <VBox id="borderLayout" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200.0" minWidth="100.0" prefHeight="600.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="143.0" fitWidth="195.0" pickOnBounds="true">
               <image>
                  <Image url="@../images/logofinalv2.png" />
               </image>
            </ImageView>
            <TextField maxWidth="-Infinity" minWidth="200.0" prefHeight="36.0" prefWidth="200.0" promptText="Login">
               <VBox.margin>
                  <Insets bottom="5.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="36.0" prefWidth="200.0" promptText="Password">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin></PasswordField>
            <PasswordField maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="36.0" prefWidth="200.0" promptText="Confirm password">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </PasswordField>
            <TextField maxWidth="-Infinity" minWidth="200.0" prefHeight="36.0" prefWidth="200.0" promptText="Name">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <TextField maxWidth="-Infinity" minWidth="200.0" prefHeight="36.0" prefWidth="200.0" promptText="Surname">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <TextField maxWidth="-Infinity" minWidth="200.0" prefHeight="36.0" prefWidth="200.0" promptText="Prefix" />
            <TextField maxWidth="-Infinity" minWidth="200.0" prefHeight="36.0" prefWidth="200.0" promptText="Street">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="36.0" prefWidth="200.0">
               <children>
                  <TextField alignment="BOTTOM_LEFT" prefHeight="36.0" prefWidth="70.0" promptText="Post-code">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </TextField>
                  <TextField maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="36.0" prefWidth="125.0" promptText="City">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#signUp" prefHeight="36.0" prefWidth="200.0" text="Sign up" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Hyperlink onAction="#backToLogin" text="Already have an account">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Hyperlink>
         </children>
      </VBox>
   </children>
</Pane>
